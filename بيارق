  <script>
    let currentSlide = 1;
    let selectedCategory = '';
    let teamCount = 2;

    // ÿßŸÑÿ™ŸÜŸÇŸÑ ÿßŸÑÿ™ŸÑŸÇÿßÿ¶Ÿä ŸÑŸÑÿ¥ÿ±Ÿäÿ≠ÿ™ŸäŸÜ ÿßŸÑÿ£ŸàŸÑŸâ ŸàÿßŸÑÿ´ÿßŸÜŸäÿ©
    setTimeout(() => {
      showSlide(2);
      setTimeout(() => {
        showSlide(3);
      }, 3000);
    }, 3000);

    function showSlide(slideNumber) {
      document.querySelectorAll('.slide').forEach(slide => {
        slide.classList.remove('active');
      });
      document.getElementById('slide' + slideNumber).classList.add('active');
      currentSlide = slideNumber;
    }

    function selectGameType(type) {
      if (type === 'youth') {
        showSlide(4);
      }
    }

    function selectCategory(category) {
      selectedCategory = category;
      showSlide(5);
    }

    function changeTeamCount(change) {
      teamCount = Math.max(2, teamCount + change);
      document.getElementById('teamCount').textContent = teamCount;
    }

    function goToGameStart() {
      showSlide(6);
    }

    function startGame() {
      showSlide(7);
    }

    // ÿ£ÿ≥ÿ¶ŸÑÿ© ÿßŸÑŸÑÿπÿ®ÿ©
