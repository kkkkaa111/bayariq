        opts.appendChild(btn);
      });

      document.getElementById("questionBox").style.display = "block";
    }

    function handleAnswer(selectedAnswer, correctAnswer, questionKey) {
      const resultDiv = document.getElementById("resultMessage");
      const optionsContainer = document.getElementById("optionsContainer");
      
      // Ø¥Ø®ÙØ§Ø¡ Ø§Ù„Ø®ÙŠØ§Ø±Ø§Øª
      optionsContainer.style.display = "none";
      
      if (selectedAnswer === correctAnswer) {
        // Ø¥Ø¬Ø§Ø¨Ø© ØµØ­ÙŠØ­Ø©
        resultDiv.textContent = "ØµØ­";
        resultDiv.className = "result-message correct";
        resultDiv.style.display = "block";
        
        // Ø­Ø°Ù Ø§Ù„Ø³Ø¤Ø§Ù„ Ù…Ù† Ù„ÙˆØ­Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª
        setTimeout(() => {
          removeQuestionFromBoard(questionKey);
          document.getElementById("questionBox").style.display = "none";
        }, 2000);
        
      } else {
        // Ø¥Ø¬Ø§Ø¨Ø© Ø®Ø§Ø·Ø¦Ø©
        resultDiv.textContent = "Ø£Ø¨Ø´Ø± Ø¨Ø§Ù„Ø¹ÙˆØ¶";
        resultDiv.className = "result-message incorrect";
        resultDiv.style.display = "block";
        
        // Ø§Ù„Ø¹ÙˆØ¯Ø© Ø¥Ù„Ù‰ Ù„ÙˆØ­Ø© Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª Ø¨Ø¹Ø¯ 2 Ø«Ø§Ù†ÙŠØ©
        setTimeout(() => {
          document.getElementById("questionBox").style.display = "none";
        }, 2000);
      }
    }

    function removeQuestionFromBoard(questionKey) {
      // Ø§Ù„Ø¨Ø­Ø« Ø¹Ù† Ø§Ù„Ø®Ù„ÙŠØ© Ø§Ù„Ù…Ù†Ø§Ø³Ø¨Ø© ÙˆØªØ¹Ø·ÙŠÙ„Ù‡Ø§
      const cells = document.querySelectorAll('.cell');
      cells.forEach(cell => {
        if (cell.onclick && cell.onclick.toString().includes(questionKey)) {
          cell.className = "cell removed";
          cell.onclick = null;
        }
      });
    }
