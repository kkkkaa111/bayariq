    function showQuestion(key) {
      const q = questions[key];
      document.getElementById("questionImage").src = q.image;
      document.getElementById("questionText").textContent = q.text;
      document.getElementById("resultMessage").style.display = "none";

      const opts = document.getElementById("optionsContainer");
      opts.innerHTML = "";
      q.options.forEach(opt => {
        const btn = document.createElement("button");
        btn.textContent = opt;
        btn.onclick = () => handleAnswer(opt, q.correct, key);
        opts.appendChild(btn);
      });

      document.getElementById("questionBox").style.display = "block";
    }

    function handleAnswer(selectedAnswer, correctAnswer, questionKey) {
      const resultDiv = document.getElementById("resultMessage");
      const optionsContainer = document.getElementById("optionsContainer");
      
      // ÿ•ÿÆŸÅÿßÿ° ÿßŸÑÿÆŸäÿßÿ±ÿßÿ™
      optionsContainer.style.display = "none";
      
      if (selectedAnswer === correctAnswer) {
        // ÿ•ÿ¨ÿßÿ®ÿ© ÿµÿ≠Ÿäÿ≠ÿ©
        resultDiv.textContent = "ÿµÿ≠";
        resultDiv.className = "result-message correct";
        resultDiv.style.display = "block";
        
        // ÿ≠ÿ∞ŸÅ ÿßŸÑÿ≥ÿ§ÿßŸÑ ŸÖŸÜ ŸÑŸàÿ≠ÿ© ÿßŸÑÿ®ŸäÿßŸÜÿßÿ™
        setTimeout(() => {
          removeQuestionFromBoard(questionKey);
          document.getElementById("questionBox").style.display = "none";
        }, 2000);
        
      } else {
        // ÿ•ÿ¨ÿßÿ®ÿ© ÿÆÿßÿ∑ÿ¶ÿ©
        resultDiv.textContent = "ÿ£ÿ®ÿ¥ÿ± ÿ®ÿßŸÑÿπŸàÿ∂";
        resultDiv.className = "result-message incorrect";
        resultDiv.style.display = "block";
        
        // ÿßŸÑÿπŸàÿØÿ© ÿ•ŸÑŸâ ŸÑŸàÿ≠ÿ© ÿßŸÑÿ®ŸäÿßŸÜÿßÿ™ ÿ®ÿπÿØ 2 ÿ´ÿßŸÜŸäÿ©
        setTimeout(() => {
          document.getElementById("questionBox").style.display = "none";
        }, 2000);
      }
    }

    function removeQuestionFromBoard(questionKey) {
      // ÿßŸÑÿ®ÿ≠ÿ´ ÿπŸÜ ÿßŸÑÿÆŸÑŸäÿ© ÿßŸÑŸÖŸÜÿßÿ≥ÿ®ÿ© Ÿàÿ™ÿπÿ∑ŸäŸÑŸáÿß
      const cells = document.querySelectorAll('.cell');
      cells.forEach(cell => {
        if (cell.onclick && cell.onclick.toString().includes(questionKey)) {
          cell.className = "cell removed";
          cell.onclick = null;
        }
      });
    }
  </script>
